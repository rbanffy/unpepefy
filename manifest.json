{
    "manifest_version": 2,

    "name": "Unpepefy - Making Twitter Great Again",
    "description": "Browser extension to remove deplorable Pepes from your Twitter timeline.",
    "version": "0.0.7",

    "permissions": [
        "tabs",
        "https://twitter.com/*",
        "https://tweetdeck.twitter.com/*"
    ],
    "icons": {
        "128": "icon128.png",
        "64": "icon64.png",
        "48": "icon48.png",
        "32": "icon32.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://twitter.com/*",
                "https://tweetdeck.twitter.com/*"
            ],
            "js": [ "content.js" ],
            "run_at": "document_end"
        }
    ]
}
